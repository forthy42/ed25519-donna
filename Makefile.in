# fake makefile

CFLAGS=@CFLAGS@
CC=@CC@
LIB=ed25519-prims
PREFIX=$(subst gcc,,$(CC))
BITS=`getconf LONG_BIT|grep 64`
INSTALL=/usr/local
INCLUDES=ed25519.h ed25519-prims.h ed25519-donna-portable-identify.h

all:
	$(PREFIX)libtool --tag=CC --mode=compile $(CC) $(CFLAGS) -c $(LIB).c
	$(PREFIX)libtool --tag=CC --mode=link $(CC) -module -rpath $(INSTALL)/lib$(BITS)/ $(LIB).lo -o .libs/lib$(LIB).la

install:
	$(PREFIX)libtool --mode=install install -c .libs/lib$(LIB).la $(INSTALL)/lib$(BITS)
	cp $(INCLUDES) $(INSTALL)/include
